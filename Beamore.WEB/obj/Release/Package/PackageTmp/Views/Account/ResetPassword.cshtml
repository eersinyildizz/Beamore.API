
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Beamore |Reset Password</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Content/css/blue.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page" style="background: url('../../Content/img/bc4.jpg') no-repeat center center fixed;
            /*-webkit-background-size: cover;
            -moz-background-size: cover;*/
            /*-o-background-size: cover;*/
            background-size: cover;">

    @if (ViewBag.error != null)
    {
        <script>
        alert("@ViewBag.error");
        </script>
    } 
    @if (ViewBag.reset != null)
    {
        <script>
        alert("@ViewBag.reset");
        </script>
    }
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Login","Account")" style="color:#f7f8fc; font-size:55px; font-family:cursive"><b>Beamore</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="background: rgba(251, 252, 254, 0.49); border-radius: 15px; color: #05050d;">
            <p class="login-box-msg">Please enter your email address to reset your password </p>
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
            {
                <div class="form-group has-feedback">
                    <input type="email" name="Email" class="form-control" placeholder="Email" required>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Reset Passwords</button>
                    </div>
                    <!-- /.col -->
                </div>
            } 
          <br />
            <!-- /.social-auth-links -->
          
                <a href="@Url.Action("Login","Account")" class="text-center" style="color: #0d0d0d;">Go to login page</a>
            
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->

    <script src="~/Content/js/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Content/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/js/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
