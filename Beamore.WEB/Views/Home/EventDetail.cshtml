                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">11 AM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">12 AM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">1 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">2 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">3 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">4 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">5 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">6 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="usr">7 PM:</label>
                                                <input type="text" class="form-control" name="flow" value="-" id="usr">
                                            </div>
                                        </div>

                                    </div>
    }

                                    
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
        }
                        </div>

                    </div>
                </div>


            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Time</th>
                            <th>Explain</th>
                            <th>Date</th>
                            <th>Operations</th>
                        </tr>
                    @if (Model.EventFlow != null)
                    {
                        foreach (var item in Model.EventFlow)
                        {
                            <tr>
                                <td>@item.FlowTime</td>
                                <td>@item.FlowName</td>
                                <td>@Model.Event.EventDate.ToString("dd/MM/yyyy")</td>
                                <td><a href="" data-toggle="modal" data-target="#myModal-@item.FlowId"><span class="label label-success"><i class="fa fa-fw fa-plus-circle"></i> Add/Edit </span></a></td>
                            </tr>

                            <div id="myModal-@item.FlowId" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    @using (Html.BeginForm("FlowDetailAdd", "Home",FormMethod.Post))
                                    {
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">@item.FlowName Detail Add</h4>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="EventId" value="@Model.Event.EventID" />
                                                <input type="hidden" name="flowID" value="@item.FlowId" />
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="usr">Header :</label>
                                                        <input type="text" class="form-control" name="header" value="@item.Header" id="usr">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="usr">Explain :</label>
                                                        <input type="text" class="form-control" name="explain" value="@item.Explain" id="usr">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label for="usr">Company Name:</label>
                                                        <input type="text" class="form-control" name="company" value="@item.CompanyName" id="usr">
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="submit" class="btn btn-success">Save</button>
                                                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    }
                                  

                                </div>
                            </div>
                        }
                    }
                       
                       
                       
                    </tbody>
                </table>
            </div>
           
        </div>
        <!-- /.box -->
     
    </div>
</div>